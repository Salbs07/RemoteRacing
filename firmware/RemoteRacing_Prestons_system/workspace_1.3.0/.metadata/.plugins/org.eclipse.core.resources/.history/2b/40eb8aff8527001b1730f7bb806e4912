#ifndef RACING_DATA_H
#define RACING_DATA_H

#define TX_COMMAND_SIZE 2
#define TX_DATA_SIZE 120

typedef struct {
	uint8_t
} data_packet_tx;

typedef enum {POSITIONS = 0x00, RACE_LENGTH = 0x01, RACE_START = 0x02, RACE_END = 0x03} command_t;

typedef struct {
	command_t command : TX_COMMAND_SIZE;
	uint8_t command_data[TX_DATA_SIZE] : 8*TX_DATA_SIZE;
} data_packet_rx;
#endif
