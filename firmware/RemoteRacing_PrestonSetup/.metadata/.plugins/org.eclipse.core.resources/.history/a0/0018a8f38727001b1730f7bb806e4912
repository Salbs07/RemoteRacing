#ifndef RACING_DATA_H
#define RACING_DATA_H

#include "main.h"
#define TX_COMMAND_SIZE 2
#define TX_DATA_SIZE 120

typedef struct {
	uint8_t gps_data[GPS_TX_BUFFER_SIZE];
	float imu_data[3];

} data_packet_tx;

typedef enum {POSITIONS = 0x00000000, RACE_LENGTH = 0x00000001, RACE_START = 0x00000002, RACE_END = 0x00000003} command_t;

typedef struct {
	command_t command : 32;
	uint8_t command_data[TX_DATA_SIZE];
} data_packet_rx;
#endif
